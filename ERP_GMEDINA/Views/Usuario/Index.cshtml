@model IEnumerable<ERP_GMEDINA.Models.tbUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBaseInventario.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Usuario</h2>
        @*<ol class="breadcrumb">
            <li class="active">
                <strong>tbUsuario</strong>
            </li>
        </ol>*@
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Usuarios</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Usuario", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-responsive table-bordered table-hover" style="width:100%" id="tblUsuario">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_NombreUsuario)
                                </th>
                                @*<th>
                            @Html.DisplayNameFor(model => model.usu_Password)
                        </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_Nombres)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_Apellidos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_Correo)
                                </th>
                                <th>
                                    Estado
                                </th>
                                @*<th>
                            @Html.DisplayNameFor(model => model.usu_RazonInactivo)
                        </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.usu_EsAdministrador)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_NombreUsuario)
                                    </td>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.usu_Password)
                            </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Nombres)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_Correo)
                                    </td>
                                    @if (item.usu_EsActivo == true)
                {
                                        <td> Activo</td>
                                    }
                                    else
                                    {
                                        <td>Inactivo</td>
                                    }
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.usu_RazonInactivo)
                            </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.usu_EsAdministrador)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.usu_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @if (item.usu_EsActivo == true)
                                        {
                                            @Html.ActionLink("Editar", "Edit", new { id = item.usu_Id }, new { @class = "btn btn-white btn-xs" })

                                            <button type="button" id="inactivar" onclick="inactivar(@item.usu_Id,0)" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#ModalAnular1">
                                                Inactivar
                                            </button>

                                            @*@Html.ActionLink("Inactivar", "Inactivar", new { id = item.usu_Id }, new { @class = "btn btn-danger btn-xs" })*@
                                        }
                                        else
                                        {
                                            <button type="button" id="inactivar" onclick="inactivar(@item.usu_Id,1)" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalAnular1">
                                                Activar
                                            </button>
                                        }

                                    </td>
                                </tr>
                            }

                    </table>

                 

                </div>
            </div>
        </div>
    </div>
 </div>
<div class="modal fade" id="ModalAnular1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel"> Usuario</h5>
            </div>
            <div class="modal-body">
                <p><label value="">Modificar el estado del Usuario? </label></p>

                <input type="hidden" name="conten" id="conten">
                <input type="hidden" name="TruFals" id="TruFals">

                <textarea rows="4" cols="50" placeholder="Ingrese la razon de Inactivación" id="razonInac" name="razonInac" onKeyPress="return CaracteresNombre(event)" , onkeyup="this.value=NumText(this.value)"></textarea>
                <p id="Mensaje" style="color:red"></p>
            </div>


            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="Inactivar">Si</button>
                @*<button type="button" class="btn btn-primary" name="Si" id="Si" data-dismiss="modal" onclick="InactivarCliente();">Si</button>*@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/RolesUsuarioEdit.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>




