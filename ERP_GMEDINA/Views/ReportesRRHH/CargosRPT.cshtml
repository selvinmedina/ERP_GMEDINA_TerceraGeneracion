@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_Report_Cargos

@{
    ViewBag.Title = "CargosRPT";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";
}

@using (Html.BeginForm("CargosRPT", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de empleados</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Cargo</label>

                                @Html.DropDownList("IdCargo", (IEnumerable<SelectListItem>)ViewBag.Cargos, "Seleccione una opción", new { @class = "buscable form-control" })

                                @*@Html.ValidationMessageFor(model => model.des, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="col-md-6">
                                <label class="font-normal">Departamento</label>

                                @Html.DropDownList("IdPersona", (IEnumerable<SelectListItem>)ViewBag.Empleados, "Seleccione una opción", new { @class = "buscable form-control" })

                                @*@Html.ValidationMessageFor(model => model.habi_Id, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

