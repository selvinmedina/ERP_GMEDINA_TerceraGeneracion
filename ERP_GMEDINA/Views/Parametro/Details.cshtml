@model ERP_GMEDINA.Models.tbParametro

@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_LayoutBaseInventario.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalle</h2>
        <ol class="breadcrumb">
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>

    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalle Parametro</h5>
                </div>
                <div class="ibox-content">
                    <div class="col-lg-6">


                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.par_PathLogo)
                            </dt>
                            <dd>
                                @{
                                    if (Model.par_PathLogo != null && Model.par_PathLogo != "")
                                    {
                                        <img src="@Url.Content(Model.par_PathLogo)" alt="Fotografía" class="img-rounded" width="200" height="200">
                                    }
                                    else
                                    {
                                        <img src="~/Content/img/NoImage.png" alt="Sin Fotografía" class="img-rounded" width="200" height="200">
                                    }
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-6">
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.par_NombreEmpresa)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.par_NombreEmpresa)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_TelefonoEmpresa)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.par_TelefonoEmpresa)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_CorreoEmpresa)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.par_CorreoEmpresa)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.par_RolGerenteTienda)
                            </dt>

                            <dd>
                                @*@Html.DisplayFor(model => model.par_RolGerenteTienda) -*@
                                @Html.DisplayFor(model => model.tbRol3.rol_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_RolCreditoCobranza)
                            </dt>

                            <dd>
                                @*@Html.DisplayFor(model => model.par_RolCreditoCobranza) -*@
                                @Html.DisplayFor(model => model.tbRol2.rol_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_RolSupervisorCaja)
                            </dt>

                            <dd>
                                @*@Html.DisplayFor(model => model.par_RolSupervisorCaja) -*@
                                @Html.DisplayFor(model => model.tbRol4.rol_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_RolCajero)
