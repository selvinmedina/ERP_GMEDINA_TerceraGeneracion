                            <dd>
                                @*@Html.DisplayFor(model => model.par_RolCajero) -*@
                                @Html.DisplayFor(model => model.tbRol1.rol_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_RolAuditor)
                            </dt>

                            <dd>
                                @*@Html.DisplayFor(model => model.par_RolAuditor) -*@
                                @Html.DisplayFor(model => model.tbRol.rol_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.par_SucursalPrincipal)
